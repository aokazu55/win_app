<section class="hero is-success">
	<div class="hero-body">
		<div class="container">
			<h1 class="title">
				提供者一覧
			</h1>
		</div>
	</div>
</section>

<div class="columns is-mobile is-multiline">
	<div class="column is-12-mobile is-4-tablet is-6-desktop">

		<div class="column", style: "background-color:rgb(250, 242, 128); color:black; border: none;" >カラム</div>
		<div class="column", style: "background-color:rgb(250, 242, 128); color:black; border: none;">カラム</div>
	</div>
</div>

<section class="section">
	<div class="container">
		<div class="columns is-multiline">
			<% @users.each do |user| %>
			<% if user.deleted_at == nil %>
			<div class="column is-3">
				<div class="card">
					<div class="card-content">
						<div class="card-image">
							<figure class="image">
								<%= link_to user_path(user) do %>
									<%= attachment_image_tag user, :image, fallback: "no-image.png" %>
								<% end %>
							</figure>
						</div>
					</div>
					<div class="card-content">
						<div class="media">
							<div class="media-content">
								<div class="title"><%=link_to user.name, user_path(user) %></div>
							</div>
						</div>
						<div class="content">
							投稿数：<%= user.services.count %>
						</div>
					</div>
				</div>
			</div>
			<% end %>
			<% end %>
		</div>
	</div>
</section>