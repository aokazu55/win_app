<article class="media">
	<%= form_with(model: [service, comment]) do |f| %>
	<div class="media-content">
		<div class="field">
			<p class="control">
				<%= f.text_area :content, placeholder: "ここに1〜140文字までで入力下さい", class: "textarea" %>
			</p>
		</div>
		<nav class="level">
			<div class="level-left">
				<div class="level-item">
						<div class="comment-button">
							<%= f.submit '登録', class: "button is-info" do %> 
							<% end %>
						</div>
				</div>
			</div>
			<!-- <div class="level-right">
				<div class="level-item">
					<label class="checkbox">
						<input type="checkbox"> Enterで送信
					</label>
				</div>
			</div> -->
		</nav>
		<% end %>
	</div>
</article>