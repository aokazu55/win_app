<div class="main__content">
	<section class="chapter__container">
		<h2 class="chapter__head">支払い方法</h2>
		<div class="payment__main">
			<div class="payment__list">
				<div class="payment__list__content">
					<h3 class="sub__head">クレジットカード一覧</h3>
				</div>
			</div>
			<div class="card__payment__list">
				<form class="card__payment__content"></form>
				<div class="card__list">
					<div class="card__list__picture"></div>
				</div>
				<div class="card__number">
					<%= "**** **** **** " + @default_card_information.last4 %>
				</div>
				<div class="expire__date">
					<% exp_month = @default_card_information.exp_month.to_s %>
					<% exp_year = @default_card_information.exp_year.to_s.slice(2,3) %>
					<%= exp_month + " / " + exp_year %>
				</div>
				<%= form_tag(delete_credit_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do %>
				<input name="card_id" type="hidden"></input>
				<button class="delete__button">削除する</button>
				<% end %>
			</div>
			<div class="how__not__regist">
				<span>支払い方法について</span>
			</div>
		</div>
	</section>
</div>