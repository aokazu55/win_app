<section class="hero is-success">
	<div class="hero-body">
		<div class="container">
			<h1 class="title">
				プロフィール作成
			</h1>
		</div>
	</div>
</section>


<% if @profile.errors.any? %>
<div class="notification is-danger">
	<h2><%= pluralize(@profile.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
	<ul>
		<% @profile.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<section class="section">
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-6">
				<%= form_for @profile do |f| %>
				<div class="field">
					<%= f.label :nickname, "ニックネーム", class: "label" %>
					<%= f.text_field :nickname, class: "input" %>
				</div>

				<div class="field">
					<%= f.label :date_of_birth, "誕生日", class: "label" %>
					<%= f.date_select :date_of_birth, use_month_numbers: true,　start_year: 1910, end_year: (Time.now.year - 10), default: Date.new(1970, 1, 1), class: 'form-control btn-form' %>
				</div>

				<div class="field">
					<%= f.label :introduce, "備考", class: "label" %>
					<%= f.text_area :introduce, class: "textarea" %>
				</div>

				<%= f.submit '投稿', class: "button is-success" %>
				<% end %>
			</div>
		</div>
	</div>
</section>